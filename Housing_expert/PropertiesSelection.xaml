<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Housing_expert.PropertySelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Housing_expert"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                   HorizontalAlignment="Center"
                   Margin="20">
            <TextBlock Text="Add New Property" 
                      FontSize="28" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            <TextBlock Text="About the process: Fill in the details below to list your property on Housing Expert." 
                      FontSize="14" 
                      Foreground="Gray" 
                      TextWrapping="Wrap" 
                      MaxWidth="600" 
                      HorizontalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1" 
              Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <StackPanel Grid.Column="0" 
                       Spacing="15">
                <!-- Property Type (Dropdown) -->
                <ComboBox x:Name="PropertyTypeComboBox" 
                         Header="Property Type" 
                         SelectedIndex="0">
                    <ComboBoxItem Content="Duplex"/>
                    <ComboBoxItem Content="One Bedroom"/>
                    <ComboBoxItem Content="Two Bedroom"/>
                    <ComboBoxItem Content="Three Bedroom"/>
                    <ComboBoxItem Content="Apartment"/>
                    <ComboBoxItem Content="Villa"/>
                </ComboBox>

                <!-- Location (Text input for now) -->
                <TextBox x:Name="LocationTextBox" 
                        Header="Location" 
                        PlaceholderText="Enter location or select from map"/>

                <!-- Ratings (Radio Buttons) -->
                <StackPanel>
                    <TextBlock Text="Ratings" 
                              FontSize="16" 
                              Margin="0,0,0,5"/>
                    <!-- Simulate Header -->
                    <RadioButton x:Name="Rating1" 
                                Content="1 Star" 
                                GroupName="Ratings" 
                                Checked="Rating_Changed"/>
                    <RadioButton x:Name="Rating2" 
                                Content="2 Stars" 
                                GroupName="Ratings" 
                                Checked="Rating_Changed"/>
                    <RadioButton x:Name="Rating3" 
                                Content="3 Stars" 
                                GroupName="Ratings" 
                                Checked="Rating_Changed"/>
                    <RadioButton x:Name="Rating4" 
                                Content="4 Stars" 
                                GroupName="Ratings" 
                                Checked="Rating_Changed"/>
                    <RadioButton x:Name="Rating5" 
                                Content="5 Stars" 
                                GroupName="Ratings" 
                                Checked="Rating_Changed" 
                                IsChecked="True"/>
                    <!-- Default to 5 stars -->
                </StackPanel>

                <!-- Price (Text input) -->
                <TextBox x:Name="PriceTextBox" 
                        Header="Price" 
                        PlaceholderText="Enter price (e.g., $100,000)"/>

                <!-- Title of the Property (Text input) -->
                <TextBox x:Name="PropertyTitleTextBox" 
                        Header="Property Title" 
                        PlaceholderText="Enter property title"/>
            </StackPanel>

            <!-- Right Column -->
            <StackPanel Grid.Column="1" 
                       Spacing="15">
                <!-- Upload Images Section -->
                <StackPanel>
                    <TextBlock Text="Upload Images" 
                              FontSize="16" 
                              Margin="0,0,0,5"/>
                    <!-- Simulate Header -->
                    <Button x:Name="UploadImagesButton" 
                           Click="UploadImagesButton_Click"
                           HorizontalAlignment="Stretch">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="Choose Images" 
                                          HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <TextBlock x:Name="ImagePreviewText" 
                              Text="No images selected" 
                              Foreground="Gray" 
                              TextWrapping="Wrap" 
                              MaxWidth="200"/>
                </StackPanel>

                <!-- Facility (Checkboxes for better UX) -->
                <StackPanel>
                    <TextBlock Text="Facilities" 
                              FontSize="16" 
                              Margin="0,0,0,5"/>
                    <!-- Simulate Header -->
                    <CheckBox x:Name="WifiCheckBox" 
                             Content="WiFi"/>
                    <CheckBox x:Name="PoolCheckBox" 
                             Content="Pool"/>
                    <CheckBox x:Name="ParkingCheckBox" 
                             Content="Parking"/>
                    <CheckBox x:Name="GymCheckBox" 
                             Content="Gym"/>
                    <CheckBox x:Name="GardenCheckBox" 
                             Content="Garden"/>
                    <CheckBox x:Name="SecurityCheckBox" 
                             Content="Security"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Buttons at the bottom -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" 
                   Margin="20,0,20,20" 
                   Spacing="10">
            <Button x:Name="BackToHomeButton" 
                   Content="Back to Home" 
                   Click="BackToHomeButton_Click"
                   Width="150"
                   Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="SavePropertyButton" 
                   Click="SavePropertyButton_Click"
                   Width="150">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <TextBlock Text="Save Property" 
                                  HorizontalAlignment="Center"/>
                    </DataTemplate>
                </Button.ContentTemplate>
                <Button.Background>
                    <SolidColorBrush Color="#8A2BE2"/>
                    <!-- Purple color -->
                </Button.Background>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
                <Button.BorderThickness>0</Button.BorderThickness>
            </Button>
        </StackPanel>
    </Grid>
</Page>