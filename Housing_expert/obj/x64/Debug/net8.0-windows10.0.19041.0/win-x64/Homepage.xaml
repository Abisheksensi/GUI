<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Housing_expert.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Housing_expert"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Spacing="20">

            <TextBlock Text="Housing Expert Home" 
                      FontSize="28" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Spacing="20">
                <!-- Property Add Card -->
                <Button x:ConnectionId='2' x:Name="PropertyAddCard" 
                       Content="Property Add" 
                                                     
                       Width="150" 
                       Height="150"
                       Style="{StaticResource DefaultButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                                <SymbolIcon Symbol="Home" />
                                <TextBlock Text="Property Add" FontSize="16" HorizontalAlignment="Center"/>
                                <TextBlock Text="Add a new property listing" FontSize="12" TextWrapping="Wrap" MaxWidth="120"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <!-- Agent Add Card -->
                <Button x:ConnectionId='3' x:Name="AgentAddCard" 
                       Content="Agent Add" 
                                                  
                       Width="150" 
                       Height="150"
                       Style="{StaticResource DefaultButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                                <SymbolIcon Symbol="Contact" />
                                <TextBlock Text="Agent Add" FontSize="16" HorizontalAlignment="Center"/>
                                <TextBlock Text="Add a new agent profile" FontSize="12" TextWrapping="Wrap" MaxWidth="120"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

